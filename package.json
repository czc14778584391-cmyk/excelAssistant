{
  "name": "yinliu",
  "private": true,
  "version": "1.0.2",
  "type": "module",
  "main": "electron-main.cjs",
  "scripts": {
    "dev": "vite",
    "dev:electron": "cross-env VITE_DEV_SERVER_URL=http://localhost:3000 npm-run-all --parallel dev electron",
    "electron": "electron .",
    "build": "vite build",
    "build:electron": "npm run build && electron-builder",
    "release": "vite build && electron-builder --win --config --publish always",
    "preview": "vite preview"
  },
  "dependencies": {
    "electron-updater": "^6.8.3",
    "jsoneditor": "^10.4.2",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/node": "^22.14.0",
    "@types/xlsx": "^0.0.36",
    "@vitejs/plugin-react": "^5.0.0",
    "cross-env": "^7.0.3",
    "electron": "^34.0.0",
    "electron-builder": "^25.1.8",
    "npm-run-all": "^4.1.5",
    "typescript": "~5.8.2",
    "vite": "^6.2.0"
  },
  "build": {
    "appId": "com.yinliu.classifier",
    "productName": "银流智能助手",
    "directories": {
      "output": "release",
      "buildResources": "build"
    },
    "files": [
      "dist/**",
      "electron-main.cjs",
      "preload.cjs",
      "package.json",
      "icon.png"
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "icon.ico"
    },
    "mac": {
      "icon": "icon.icns",
      "category": "public.app-category.finance"
    },
    "linux": {
      "icon": "icon.png"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "artifactName": "${productName}.${ext}"
    },
    "publish": {
      "provider": "github",
      "owner": "czc14778584391-cmyk",
      "repo": "excelAssistant",
      "releaseType": "release"
    }
  }
}
